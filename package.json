{
  "name": "@okkr/morm",
  "version": "0.1.0",
  "description": "",
  "type": "commonjs",
  "main": "dist/morm.js",
  "module": "dist/morm.mjs",
  "exports": {
    ".": {
      "require": "./dist/morm.js",
      "default": "./dist/morm.mjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "build": "tsup src --format cjs,esm --dts",
    "valid:types": "tsc --noEmit",
    "valid:examples": "node scripts/validateExamples.mjs",
    "valid:lint": "eslint . --max-warnings=0",
    "valid:lint:fix": "eslint . --max-warnings=0 --fix"
  },
  "author": "Erlend Tobiassen",
  "license": "MIT",
  "devDependencies": {
    "@npmcli/run-script": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tsup": "^3.7.1",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "plugins": [
      "prettier",
      "import"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2020": true
    },
    "overrides": [
      {
        "files": "*.ts",
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "tsconfigRootDir": ".",
          "project": [
            "./tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "plugin:import/typescript"
        ]
      },
      {
        "files": "*.mjs",
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ],
    "ignorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}